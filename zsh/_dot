#compdef dot

_dot() {
	typeset -A opt_args
	local ret=1

	local context curcontext="$curcontext" state line
    _arguments -s -S -C \
"-h[Prints help information]" \
"--help[Prints help information]" \
"-V[Prints version information]" \
"--version[Prints version information]" \
"1:: :_dot_commands" \
"*:: :->dot" \
&& ret=0
    case $state in
    (dot)
        curcontext="${curcontext%:*:*}:dot-command-$words[1]:"
        case $line[1] in
            (check)
_arguments -s -S -C \
"-v[Use verbose output]" \
"--verbose[Use verbose output]" \
"-h[Prints help information]" \
"--help[Prints help information]" \
"-V[Prints version information]" \
"--version[Prints version information]" \
&& ret=0
;;
(link)
_arguments -s -S -C \
"-n[do not actually perform I/O operations]" \
"--dry-run[do not actually perform I/O operations]" \
"-v[Use verbose output]" \
"--verbose[Use verbose output]" \
"-h[Prints help information]" \
"--help[Prints help information]" \
"-V[Prints version information]" \
"--version[Prints version information]" \
&& ret=0
;;
(clean)
_arguments -s -S -C \
"-n[do not actually perform I/O operations]" \
"--dry-run[do not actually perform I/O operations]" \
"-v[Use verbose output]" \
"--verbose[Use verbose output]" \
"-h[Prints help information]" \
"--help[Prints help information]" \
"-V[Prints version information]" \
"--version[Prints version information]" \
&& ret=0
;;
(root)
_arguments -s -S -C \
"-h[Prints help information]" \
"--help[Prints help information]" \
"-V[Prints version information]" \
"--version[Prints version information]" \
&& ret=0
;;
(help)
_arguments -s -S -C \
"-h[Prints help information]" \
"--help[Prints help information]" \
"-V[Prints version information]" \
"--version[Prints version information]" \
&& ret=0
;;
        esac
    ;;
esac
}

(( $+functions[_dot_commands] )) ||
_dot_commands() {
    local commands; commands=(
        "check:Check the files are correctly linked to the right places" \
"link:Create all of the symbolic links into home directory" \
"clean:Remote all of registered links from home directory" \
"root:Show the location of dotfiles repository and exit" \
"help:Prints this message or the help of the given subcommand(s)" \
    )
    _describe -t commands 'dot commands' commands "$@"
}
(( $+functions[_dot_check_commands] )) ||
_dot_check_commands() {
    local commands; commands=(
        
    )
    _describe -t commands 'dot check commands' commands "$@"
}
(( $+functions[_dot_clean_commands] )) ||
_dot_clean_commands() {
    local commands; commands=(
        
    )
    _describe -t commands 'dot clean commands' commands "$@"
}
(( $+functions[_dot_help_commands] )) ||
_dot_help_commands() {
    local commands; commands=(
        
    )
    _describe -t commands 'dot help commands' commands "$@"
}
(( $+functions[_dot_link_commands] )) ||
_dot_link_commands() {
    local commands; commands=(
        
    )
    _describe -t commands 'dot link commands' commands "$@"
}
(( $+functions[_dot_root_commands] )) ||
_dot_root_commands() {
    local commands; commands=(
        
    )
    _describe -t commands 'dot root commands' commands "$@"
}

_dot "$@"